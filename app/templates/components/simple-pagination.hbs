{{!-- template-lint-disable --}}
{{#if displayPaginator}}
    <nav aria-label="Page navigation" data-test-selector="page-navigation">
        <ul class="pagination {{paginationSize}}">

            <li class="page-item{{if isPrevDisabled " disabled"}}" data-test-selector="previous-page">
                {{#if isPrevDisabled}}
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                {{else}}
                    <a class="page-link" href="#" aria-label="Previous" data-test-selector="previous-page-link"
                        {{action "getPage" prevPageNumber}}>
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                {{/if}}
            </li>

            {{#each pages as |page index|}}
                <li class="page-item{{if page.active " active"}}" data-test-selector="page-item-{{index}}">
                    {{#if page.active}}
                        <span class="page-link">
                            {{page.number}}
                            <span class="sr-only">(current)</span>
                        </span>
                    {{else}}
                    <a href="#" class="page-link" {{action "getPage" page.number}} data-test-selector="page-link">
                        {{page.number}}
                    </a>
                    {{/if}}
                </li>
            {{/each}}

            <li class="page-item{{if isNextDisabled " disabled"}}" data-test-selector="next-page">
                {{#if isNextDisabled}}
                <a class="page-link" href="#" tabindex="-1">Next</a>
                {{else}}
                <a class="page-link" href="#" aria-label="Next" {{action "getPage" nextPageNumber}}
                    data-test-selector="next-page-link">

                        <span class="sr-only">Next</span>
                        <span aria-hidden="true">&raquo;</span>
                </a>
                {{/if}}
            </li>
        </ul>
    </nav>
{{/if}}
