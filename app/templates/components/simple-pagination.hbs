{{#if displayPaginator}}
    <nav aria-label="Page navigation" data-test-selector="page-navigation">
        <ul class="pagination {{paginationSize}}">
            <li class="page-item{{if isPrevDisabled " disabled"}}" data-test-selector="previous-page">
                {{#if isPrevDisabled}}
                    <a
                        aria-label="Previous"
                        class="page-link"
                        href="#"
                        tabindex="-1"
                    >
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                {{else}}
                    <a
                        aria-label="Previous"
                        class="page-link"
                        data-test-selector="previous-page-link"
                        href="#"
                        {{action "getPage" prevPageNumber}}
                    >
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                {{/if}}
            </li>

            {{#each pages as |page index|}}
                <li class="page-item{{if page.active " active"}}" data-test-selector="page-item-{{index}}">
                    {{#if page.active}}
                        <span class="page-link">
                            {{page.number}}
                            <span class="sr-only">(current)</span>
                        </span>
                    {{else}}
                        <a href="#" class="page-link" {{action "getPage" page.number}} data-test-selector="page-link">
                            {{page.number}}
                        </a>
                    {{/if}}
                </li>
            {{/each}}

            <li class="page-item{{if isNextDisabled " disabled"}}" data-test-selector="next-page">
                {{#if isNextDisabled}}
                    <a
                        aria-label="Next"
                        class="page-link"
                        href="#"
                        tabindex="-1"
                    >
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                {{else}}
                    <a
                        aria-label="Next"
                        class="page-link"
                        data-test-selector="next-page-link"
                        href="#"
                        {{action "getPage" nextPageNumber}}
                    >
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                {{/if}}
            </li>
        </ul>
    </nav>
{{/if}}
